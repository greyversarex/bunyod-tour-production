# ===========================================
# БАЗА ДАННЫХ (PostgreSQL)
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/bunyod_tour"

# ===========================================
# БЕЗОПАСНОСТЬ
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-this"
NODE_ENV="production"

# ===========================================
# СЕРВЕР
# ===========================================
PORT=5000
PRODUCTION_DOMAIN="your-domain.com"
# Дополнительные разрешенные домены (через запятую)
ALLOWED_ORIGINS="https://www.your-domain.com,https://api.your-domain.com"

# ===========================================
# ПЛАТЕЖНЫЕ СИСТЕМЫ
# ===========================================
# AlifPay (Таджикистан)
ALIF_MERCHANT_KEY="your-alif-merchant-key"
ALIF_MERCHANT_PASSWORD="your-alif-merchant-password"

# Payler (Россия/СНГ)
PAYLER_MERCHANT_ID="your-payler-merchant-id"
PAYLER_SECRET_KEY="your-payler-secret-key"

# Stripe (Международные платежи)
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ===========================================
# EMAIL ОТПРАВКА (SMTP)
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="Bunyod Tour <noreply@bunyod-tour.tj>"

# ===========================================
# ОПЦИОНАЛЬНЫЕ НАСТРОЙКИ
# ===========================================
# Включить автоматическую инициализацию БД (только для dev)
INIT_DATABASE=false

# Включить динамическое ценообразование
ENABLE_DYNAMIC_PRICING=true

# Логирование
LOG_LEVEL="info"
