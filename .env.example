# ===========================================
# ОБЯЗАТЕЛЬНЫЕ ПЕРЕМЕННЫЕ (Required)
# ===========================================

# База данных PostgreSQL
DATABASE_URL=postgresql://bunyod_user:XXXX@localhost:5432/bunyod_tour?schema=public

# JWT Secret (минимум 32 символа)
JWT_SECRET=your-super-secret-jwt-key-change-this-min-32-chars

# Админ по умолчанию
ADMIN_DEFAULT_USER=admin
ADMIN_DEFAULT_PASSWORD=***strong-password***

# ===========================================
# ОПЦИОНАЛЬНЫЕ (чтобы не было предупреждений)
# ===========================================

# Платежные системы
ALIF_MERCHANT_KEY=
ALIF_MERCHANT_PASSWORD=
PAYLER_MERCHANT_KEY=
PAYLER_PASSWORD=
STRIPE_SECRET_KEY=
PAYME_MERCHANT_ID=
CLICK_MERCHANT_ID=

# Email отправка
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=

# ===========================================
# ФЛАГИ ПОВЕДЕНИЯ (Flags)
# ===========================================

# Запускать ли миграции при старте приложения
# Production: false (миграции выполняет update.sh)
# Development: true (для удобства)
RUN_MIGRATIONS_ON_BOOT=false

# Запускать ли сид при старте приложения
# Production: false (сид выполняет update.sh)
# Development: true (для удобства)
RUN_SEED_ON_BOOT=false

# ===========================================
# CORS
# ===========================================

# Белый список доменов через запятую
# Пример: https://example.com,https://www.example.com,http://localhost:3000
CORS_ORIGINS=https://example.com

# ===========================================
# СРЕДА ВЫПОЛНЕНИЯ
# ===========================================

NODE_ENV=production
PORT=5000
